{
  "name": "graphql-ez-monorepo",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": "PabloSz <pablosaez1995@gmail.com>",
  "scripts": {
    "ci:release": "pnpm -r publish --access public --no-git-checks",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile --lockfile-only --ignore-scripts",
    "dev:cjs": "pnpm -r --filter graphql-ez dev -- --onSuccess \"pnpm -w dev:cjs:all\"",
    "dev:cjs:all": "concurrently pnpm:dev:core pnpm:dev:cjs:express pnpm:dev:cjs:fastify pnpm:dev:cjs:http pnpm:dev:cjs:koa pnpm:dev:cjs:hapi pnpm:dev:next",
    "dev:cjs:express": "cross-env PORT=3001 pnpm -r --filter example-app-express dev:cjs -- --silent",
    "dev:cjs:fastify": "cross-env PORT=3002 pnpm -r --filter example-app-fastify dev:cjs -- --silent",
    "dev:cjs:hapi": "cross-env PORT=3003 pnpm -r --filter example-app-hapi dev:cjs -- --silent",
    "dev:cjs:http": "cross-env PORT=3004 pnpm -r --filter example-app-http dev:cjs -- --silent",
    "dev:cjs:koa": "cross-env PORT=3005 pnpm -r --filter example-app-koa dev:cjs -- --silent",
    "dev:core": "pnpm -r --filter @graphql-ez/core dev",
    "dev:mjs": "pnpm -r --filter graphql-ez dev -- --onSuccess \"pnpm -w dev:mjs:all\"",
    "dev:mjs:all": "concurrently pnpm:dev:core pnpm:dev:mjs:express pnpm:dev:mjs:fastify pnpm:dev:mjs:http pnpm:dev:mjs:koa pnpm:dev:mjs:hapi pnpm:dev:next",
    "dev:mjs:express": "cross-env PORT=3001 pnpm -r --filter example-app-express dev:mjs -- --silent",
    "dev:mjs:fastify": "cross-env PORT=3002 pnpm -r --filter example-app-fastify dev:mjs -- --silent",
    "dev:mjs:hapi": "cross-env PORT=3003 pnpm -r --filter example-app-hapi dev:mjs -- --silent",
    "dev:mjs:http": "cross-env PORT=3004 pnpm -r --filter example-app-http dev:mjs -- --silent",
    "dev:mjs:koa": "cross-env PORT=3005 pnpm -r --filter example-app-koa dev:mjs -- --silent",
    "dev:next": "pnpm -r --filter example-app-nextjs dev -- -p 3006",
    "prepare": "husky install",
    "pretty": "prettier --write \"**/*{.ts,.tsx}\"",
    "test": "pnpm -r test -- "
  },
  "devDependencies": {
    "@changesets/cli": "2.16.0",
    "bob-esbuild": "0.1.26",
    "bob-esbuild-cli": "0.1.26",
    "concurrently": "6.2.0",
    "esbuild": "0.12.8",
    "husky": "6.0.0",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.0"
  },
  "engines": {
    "pnpm": ">=6.7.1"
  },
  "pnpm": {
    "overrides": {
      "graphql": "15.4.0-experimental-stream-defer.1",
      "esbuild": "^0.12.6"
    }
  }
}
