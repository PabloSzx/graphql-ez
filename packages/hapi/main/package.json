{
  "name": "@graphql-ez/hapi",
  "version": "0.10.1",
  "homepage": "https://www.graphql-ez.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/graphql-ez",
    "directory": "packages/hapi"
  },
  "license": "MIT",
  "author": "PabloSz <pablosaez1995@gmail.com>",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bob-esbuild watch",
    "prepack": "bob-esbuild build",
    "prepare": "true",
    "postpublish": "gh-release",
    "test": "jest"
  },
  "devDependencies": {
    "@hapi/hapi": "^21.4.0",
    "@types/node": "^22.15.29",
    "bob-esbuild-cli": "5.0.0-alpha-227aebc.0",
    "changesets-github-release": "^0.1.0",
    "esbuild": "^0.25.5",
    "graphql": "16.1.0-experimental-stream-defer.6",
    "graphql-ez": "workspace:^",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@hapi/hapi": "^21.1.0",
    "@types/node": "*",
    "graphql": "*",
    "graphql-ez": "workspace:^"
  },
  "peerDependenciesMeta": {
    "@hapi/hapi": {
      "optional": true
    },
    "@types/hapi__hapi": {
      "optional": true
    },
    "graphql": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "publishConfig": {
    "directory": "dist",
    "linkDirectory": false
  }
}
